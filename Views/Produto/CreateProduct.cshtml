@model Produto

@{
    ViewData["Title"] = "Cadastro de Produto";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="CreateProduct" method="post">
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <input type="text" class="form-control" placeholder="Informe a descrição do produto." asp-for="Descricao">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

    <div class="form-group">
        <label for="valor">Valor:</label>
        <input class="form-control" id="valor" placeholder="Informe o valor do produto." asp-for="Valor" type="number" step="0.01" min="0.01">
        @Html.ValidationMessageFor(x => x.Valor)
    </div>

    <br />

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a class="btn btn-secondary" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
    </div>
</form>



