@model Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="text-center">
    <h1 class="display-4">Editar Produto</h1>
</div>

<form asp-controller="Produto" asp-action="UpdateProduct" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <input class="form-control" placeholder="Informe a descrição do produto." asp-for="Descricao">
        @Html.ValidationMessageFor(x => x.Descricao)
    </div>

    <div class="form-group">
        <label for="valor">Valor:</label>
        <input class="form-control" placeholder="Informe o valor do produto." asp-for="Valor" type="number" step="0.01" min="0.01">
        @Html.ValidationMessageFor(x => x.Valor)
    </div>

    <br />

    <div class="form-group text-center">
        <button type="submit" class="btn btn-warning">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
    </div>
</form>



