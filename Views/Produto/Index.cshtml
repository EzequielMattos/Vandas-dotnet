@model List<Produto>
@{
    ViewData["Title"] = "Listagem de Produtos";
}

<div class="text-center">

    @if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MessageSuccess"]
        </div>
    }

    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MessageError"]
        </div>
    }
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="CreateProduct">Adicionar Novo Produto</a>
    </div>    

    <h1 class="display-4">Listagem de Produtos</h1>
    
    <table class="table" id="table-produtos">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descrição</th>
                <th scope="col">Valor</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var produto in Model)
                {
                    <tr>
                        <th scope="row">@produto.Id</th>
                        <td>@produto.Descricao</td>
                        <td>@produto.Valor</td>
                        <td><a role="button" class="btn btn-warning" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="UpdateProduct">Editar</a></td>
                        <td><a role="button" class="btn btn-danger" asp-route-id="@produto.Id" asp-controller="Produto" asp-action="DeleteProduct">Excluir</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

