@model List<Venda>
@{
    ViewData["Title"] = "Listagem de Vendas";
}

<div class="text-center">

    @if (TempData["MessageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MessageSuccess"]
        </div>
    }

    @if (TempData["MessageError"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MessageError"]
        </div>
    }

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Venda" asp-action="CreateVenda">Adicionar Nova Venda</a>
    </div>

    <h1 class="display-4">Listagem de Vendas</h1>

    <table class="table" id="table-vendas">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Cliente</th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor Unitário</th>
                <th scope="col">Data Venda</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var venda in Model)
                {
                    <tr>
                        <th scope="row">@venda.Id</th>
                        <td>@venda.Cliente.Nome</td>
                        <td>@venda.Produto.Descricao</td>
                        <td>@venda.Quantidade</td>
                        <td>@venda.ValorUnitario</td>
                        <td>@venda.DataVenda</td>
                        <td><a role="button" class="btn btn-warning" asp-route-id="@venda.Id" asp-controller="Venda" asp-action="UpdateVenda">Editar</a></td>
                        <td><a role="button" class="btn btn-danger" asp-route-id="@venda.Id" asp-controller="Venda" asp-action="DeleteVenda">Excluir</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

