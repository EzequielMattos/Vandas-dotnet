@model Cliente
@{
    ViewData["Title"] = "Deletar Cliente";
}

<div class="text-center">
    <h3>Tem certeza que deseja apagar o cliente @Model.Nome</h3>
    <div class="row form-group"></div>
    <a class="btn btn-danger" role="button" asp-controller="Cliente" asp-action="Index">Não</a>
    <a class="btn btn-success" role="button" asp-controller="Cliente" asp-action="Delete" asp-route-id="@Model.Id">Sim</a>
</div>