@model Cliente
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">
    <h1 class="display-4">Editar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="UpdateClient" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input class="form-control" placeholder="Informe o nome do cliente." asp-for="Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cidade">Cidade:</label>
        <input class="form-control" placeholder="Informe a cidade do cliente." asp-for="Cidade">
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>

    <br />

    <div class="form-group text-center">
        <button type="submit" class="btn btn-warning">Alterar</button>
        <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
    </div>
</form>



