@model Cliente

@{
    ViewData["Title"] = "Cadastro de Clientes";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="CreateClient" method="post">
    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" class="form-control" placeholder="Informe o nome do cliente." asp-for="Nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cidade">Cidade:</label>
        <input class="form-control" placeholder="Informe a cidade do cliente." asp-for="Cidade">
        @Html.ValidationMessageFor(x => x.Cidade)
    </div>

    <br />

    <div class="form-group text-center">
        <button type="submit" class="btn btn-success">Cadastrar</button>
        <a class="btn btn-secondary" asp-controller="Cliente" asp-action="Index" role="button">Voltar</a>
    </div>
</form>



